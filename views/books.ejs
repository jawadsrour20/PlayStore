    <script> 
      var currencyBtn = document.getElementById("currency");

      document.getElementById('currency').onclick = function() { changeCurrency(); };

      var type = "dollar";
      function changeCurrency(){
          var elements = document.getElementsByClassName('price');
          if (type == "dollar"){
            console.log(elements);
              for(var i = 0; i <elements.length; i++){
                  if (elements[i].innerHTML.toLocaleLowerCase()!="free"){
                      elements[i].innerHTML = parseFloat(elements[i].innerHTML.substr(0,elements[i].innerHTML.length))*1500;
                      elements[i].classList.remove("fa-dollar-sign");
                      elements[i].classList.remove("fas");
                      elements[i].innerHTML+="LL";

                  }
              }
              type = "Lebanese";
          }
          else{
              for(var i = 0; i <elements.length; i++){
                  if (elements[i].innerHTML.toLocaleLowerCase()!="free"){
                      elements[i].innerHTML = parseFloat(elements[i].innerHTML.substr(0,elements[i].innerHTML.length-2))/1500;
                      elements[i].classList.add("fa-dollar-sign");
                      elements[i].classList.add("fas");
                  }
              }
              type = "dollar";
          }
      }


      
    </script>
